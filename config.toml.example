[chatbot]
channel_name = "your_channel_name"
auth_token = "your_oauth_token"
refresh_token = "your_refresh_token"
sound_format = "Wav"  # Options: "Wav", "Mp3", "Opus"
welcome_message = ""  # Optional: Message to send when bot connects

[sfx]
volume = 1.0
enabled = true

[sfx.permited_roles]
subs = true
vips = false
mods = true

[tts]
volume = 1.0
enabled = true

[tts.permited_roles]
subs = true
vips = false
mods = true

[overlay]
enabled = true  # Set to true to start overlay server
port = 3000      # Port for overlay HTTP server

# Element positions (x, y in percentages 0-100, scale as multiplier)
[overlay.positions.wheel]
x = 50.0
y = 50.0
scale = 1.0

# NOTE: To configure overlay positions, open http://localhost:3000?config=true
# Press 'C' to toggle config mode and drag elements to reposition them
